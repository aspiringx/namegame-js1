{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".src",
      "paths": {
         "@controller/*": ["app/controller/*"],
         "@entity/*":     ["app/entity/*"],
         "@repository/*": ["app/repository/*"],
         "@service/*":    ["app/service/*"],
         "@migration/*":  ["db/migration/*"],
         "@seeder/*":     ["db/seeder/*"]
      },
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}